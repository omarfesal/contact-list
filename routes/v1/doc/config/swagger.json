{
	"openapi": "3.0.0",
	"info": {
		"description": "Welcome to contact list app API",
		"version": "1.0.0",
		"title": "Contact API",
		"termsOfService": "http://swagger.io/terms/"
	},
	"components": {
		"securitySchemes": {
			"BearerAuth": {
				"type": "http",
				"scheme": "bearer"
			}
		}
	},
	"servers": [
		{
			"url": "/api/v1"
		}
	],
	"tags": [
		{
			"name": "Contact",
			"description": "All APIS concerning Contact Module"
		}
	],
	"paths": {
		"/contacts/addContact": {
			"post": {
				"tags": ["Contact"],
				"summary": "Api call used to add new contact",
				"requestBody": {
					"required": true,
					"description": "*New contact data*",
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"email": {
										"type": "string",
										"example": "Omar.ghazy@gmail.com"
									},
									"mobile": {
										"type": "string",
										"example": "+201093056318"
									},
									"firstname": {
										"type": "string",
										"example": "Omar"
									},
									"lastname": {
										"type": "string",
										"example": "Ghazi"
									},
									"authorization": {
										"type": "string",
										"example": "qwerfggfdgssdlkklamsdmkladmkllwqe"
									},
									"deviceToken": {
										"type": "string",
										"example": "asdlamsdmkl"
									},
									"fingerPrint": {
										"type": "string",
										"example": "amklsdklmkasdl"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Contact Added successfully"
					},
					"400": {
						"description": "Data that sent mismatch with the server endpoint need"
					},
					"500": {
						"description": "Unknown server error"
					}
				}
			}
		},
		"/contacts/getlist": {
			"post": {
				"tags": ["Contact"],
				"summary": "Api call used to get user contacts",
				"parameters": [
					{
						"in": "query",
						"name": "page",
						"schema": {
							"type": "number"
						},
						"required": true,
						"description": "Page number"
					},
					{
						"in": "query",
						"name": "pageSize",
						"schema": {
							"type": "number"
						},
						"required": true,
						"description": "Number of contacts per page"
					}
				],
				"responses": {
					"200": {
						"description": "get User Contacts successfully"
					},
					"400": {
						"description": "Data that sent mismatch with the server endpoint need"
					},
					"500": {
						"description": "Unknown server error"
					}
				}
			}
		},
		"/contacts/getRecentList": {
			"post": {
				"tags": ["Contact"],
				"summary": "Api call used to get user recent contacts",
				"parameters": [
					{
						"in": "query",
						"name": "limit",
						"schema": {
							"type": "number"
						},
						"required": false,
						"description": "number of contacts [default: 5]"
					}
				],
				"responses": {
					"200": {
						"description": "get User's recent Contacts successfully"
					},
					"400": {
						"description": "Internal Server error"
					},
					"500": {
						"description": "Unknown server error"
					}
				}
			}
		}
	}
}
